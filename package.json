{
  "name": "cline-speech",
  "displayName": "Cline Speech Extension",
  "description": "Text-to-Speech and Speech-to-Text extension for Cline AI using speaches-ai/speaches server",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/Mikec78660/cline-speech-extension.git"
  },
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:cline-speech.tts",
    "onCommand:cline-speech.stt",
    "onCommand:cline-speech.ttsWithFile",
    "onCommand:cline-speech.sttFromFile"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cline-speech.tts",
        "title": "Cline: Text to Speech"
      },
      {
        "command": "cline-speech.stt",
        "title": "Cline: Speech to Text"
      },
      {
        "command": "cline-speech.ttsWithFile",
        "title": "Cline: Text to Speech with File"
      },
      {
        "command": "cline-speech.sttFromFile",
        "title": "Cline: Speech to Text from File"
      },
      {
        "command": "cline-speech.voiceToText",
        "title": "Cline: Voice to Text (Record)"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "cline-speech.tts",
          "when": "editorTextFocus"
        },
        {
          "command": "cline-speech.stt",
          "when": "editorTextFocus"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Cline Speech Configuration",
      "properties": {
        "clineSpeech.apiEndpoint": {
          "type": "string",
          "default": "http://speaches.lan:8000",
          "description": "The API endpoint for the speaches server"
        },
        "clineSpeech.taskCompletionAlert": {
          "type": "boolean",
          "default": false,
          "description": "Enable task completion audio alerts"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^16.11.6",
    "@types/vscode": "^1.70.0",
    "typescript": "^4.4.3"
  }
}
